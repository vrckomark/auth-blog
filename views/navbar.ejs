<head>
  <script
    src="https://kit.fontawesome.com/3200730e91.js"
    crossorigin="anonymous"
  ></script>
  <style>
    .fa-arrow-right-from-bracket {
      color: blueviolet;
    }
  </style>
</head>
<nav class="w-screen h-max flex flex-row justify-evenly mt-4">
  <div class="flex w-1/2 justify-between">
    <a href="/" class="text-3xl ml-10 text-purple-500">Home</a>
  </div>
  <div class="flex w-1/2 justify-end">
    <% if(session.isAuth){ %>
    <div class="text-purple-500 text-3xl mr-10">
      Hello <%= session.username %>
    </div>
    <form action="/logout" method="POST">
        <button type="submit">
          <i class="fa-solid fa-2x fa-arrow-right-from-bracket"></i>
        </button>
      </i>
    </form>

    <% } else{%>
    <a href="/login" class="text-3xl float-right text-purple-500">Login</a>
    <a href="/register" class="text-3xl float-right text-purple-500 mx-10"
      >Register</a
    >
    <% } %>
  </div>
</nav>
