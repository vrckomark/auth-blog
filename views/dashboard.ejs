<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./styles/style.css" />

    <title>Dashboard</title>
  </head>
  <body class="bg-gray-800">
    <%- include("navbar", session) %>
    <div class="flex">
      <div class="flex flex-col mt-8 w-max">
        <form class="ml-16 mt-10" action="/deleteUsers" method="GET">
          <input
            class="cursor-pointer text-white text-3xl p-5 border-2 border-red-900 rounded-2xl bg-red-700"
            type="submit"
            value="Delete all users"
          />
        </form>
        <form class="ml-16 mt-10" action="/deleteBlogs" method="GET">
          <input
            class="cursor-pointer text-white text-3xl p-5 border-2 border-red-900 rounded-2xl bg-red-700"
            type="submit"
            value="Delete all blogs"
          />
        </form>
      </div>

      <div
        class="p-10 ml-10 mt-10 flex flex-col w-screen justify-center items-start"
      >
        <% users.map((user)=>{ %>
        <div
          class="mb-8 w-1/2 flex flex-col border-2 border-purple-500 rounded-2xl p-5"
        >
          <div class="flex flex-col">
            <div class="text-xl text-gray-600"><%= user.id %></div>
          </div>
          <div class="text-3xl my-1 text-purple-500"><%= user.username %></div>
          <div class="text-3xl my-1 text-purple-500"><%= user.email %></div>
        </div>

        <% }) %>
      </div>
    </div>
  </body>
</html>
